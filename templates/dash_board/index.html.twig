{% extends 'base.html.twig' %}

{% block title %}Tableau de Bord - Pépi+
{% endblock %}

{% block body %}
	<div
		class="min-h-screen bg-gray-100">
		{# Header dynamique #}
		<div class="bg-white shadow-sm border-b border-gray-200">
			<div class="sm:px-8 lg:px-8 py-6 flex justify-between items-center">
				<div>
					<h1 class="text-2xl font-bold text-gray-900">Tableau de Bord</h1>
					<p class="mt-1 text-sm text-gray-500">Vue d'ensemble de l'activité Pépi+</p>
				</div>
				<div class="text-sm font-medium text-gray-500 bg-gray-50 px-4 py-2 rounded-full border border-gray-200">
					{{ "now"|date("d/m/Y") }}
				</div>
			</div>
		</div>

		<div
			class="sm:px-8 lg:px-8 py-8">
			{# Statistiques rapides #}
			<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
				<div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200 flex items-center">
					<div class="p-3 bg-green-100 rounded-lg text-green-600 mr-4">
						<twig:ux:icon name="ic:round-storage" class="w-6 h-6"/>
					</div>
					<div>
						<p class="text-sm font-medium text-gray-500 uppercase tracking-wider">Alertes Stock</p>
						<p class="text-2xl font-bold text-gray-900">{{ low_stocks|length }}</p>
					</div>
				</div>

				<div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200 flex items-center">
					<div class="p-3 bg-blue-100 rounded-lg text-blue-600 mr-4">
						<twig:ux:icon name="iconoir:cart" class="w-6 h-6"/>
					</div>
					<div>
						<p class="text-sm font-medium text-gray-500 uppercase tracking-wider">Commandes</p>
						<p class="text-2xl font-bold text-gray-900">{{ total_orders }}</p>
					</div>
				</div>

				<div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200 flex items-center">
					<div class="p-3 bg-purple-100 rounded-lg text-purple-600 mr-4">
						<twig:ux:icon name="iconoir:user" class="w-6 h-6"/>
					</div>
					<div>
						<p class="text-sm font-medium text-gray-500 uppercase tracking-wider">Partenaires</p>
						<p class="text-2xl font-bold text-gray-900">{{ total_partners }}</p>
					</div>
				</div>
			</div>

			<div
				class="grid grid-cols-1 lg:grid-cols-2 gap-8">
				{# Section Alertes de Stock (Priorité visuelle) #}
				<div class="bg-white shadow rounded-xl border border-gray-200 overflow-hidden">
					<div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center bg-red-50/50">
						<div class="p-3 bg-red-100 rounded-full text-red-600 mr-4">
							<twig:ux:icon name="circum:warning" class="w-6 h-6"/>
						</div>
						<div>
							<p class="text-sm font-medium text-gray-500">Alertes Stock</p>
							<p class="text-2xl font-bold text-gray-900">{{ low_stocks|length }}</p>
						</div>
					</div>
					<div class="divide-y divide-gray-100">
						{% for stock in low_stocks %}
							<div class="px-6 py-4 flex items-center justify-between hover:bg-gray-50">
								<div>
									<p class="text-sm font-bold text-gray-900">{{ stock.plant.latinName }}</p>
									<p class="text-xs text-gray-500">{{ stock.packaging.label|default('Standard') }}</p>
								</div>
								<span class="px-3 py-1 rounded-full text-xs font-bold bg-red-100 text-red-700 border border-red-200">
									{{ stock.quantity }}
									restants
								</span>
							</div>
						{% else %}
							<div class="px-6 py-10 text-center text-gray-500">
								<twig:ux:icon name="bi:check-lg" class="w-10 h-10 mx-auto mb-2 text-green-400"/>
								<p>Tout est sous contrôle. Aucun stock bas.</p>
							</div>
						{% endfor %}
					</div>
				</div>

				{# Section Commandes Récentes #}
				<div class="bg-white shadow rounded-xl border border-gray-200 overflow-hidden">
					<div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
						<h2 class="text-lg font-bold text-gray-900 uppercase text-xs tracking-widest">Dernières Activités</h2>
						<a href="{{ path('app_order_index') }}" class="text-xs font-bold text-green-600 hover:underline">VOIR TOUT</a>
					</div>
					<div class="overflow-x-auto">
						<table class="min-w-full divide-y divide-gray-200">
							<tbody class="bg-white divide-y divide-gray-100">
								{% for order in recent_orders %}
									<tr class="hover:bg-gray-50">
										<td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
											{{ order.orderNumber }}
										</td>
										<td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
											{% if order.status == 'Réservation' %}
												<span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">
													{{ order.status }}
												</span>
											{% elseif order.status == 'Annulée' %}
												<span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
													{{ order.status }}
												</span>
											{% else %}
												<span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
													{{ order.status }}
												</span>
											{% endif %}
										</td>
										<td class="px-6 py-4 whitespace-nowrap text-right text-xs text-gray-400 font-mono">
											{{ order.createdAt|date('d/m H:i') }}
										</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
