{% extends 'base.html.twig' %}

{% block title %}
	Inventaire des Stocks Global
{% endblock %}

{% block body %}
	<div
		class="min-h-screen bg-gray-100">
		{# Header #}
		<div class="bg-white shadow-sm border-b border-gray-200">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
				<div class="flex items-center justify-between">
					<div>
						<h1 class="text-2xl font-bold text-gray-900">
							Inventaire des Stocks
						</h1>
						<p class="mt-1 text-sm text-gray-500">
							Gérez vos quantités et emplacements
						</p>
					</div>
					<p class="mt-1 text-sm text-gray-500">
						Pour créer une commande, rendez-vous sur la page des stocks global.
					</p>
				</div>
			</div>
		</div>

		{# Content #}
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
			<div class="bg-white shadow-sm rounded-lg border border-gray-200 overflow-hidden">
				<div class="flex justify-end p-4">
					{{ form_start(searchForm, {'attr': {'class': 'relative w-full'}}) }}
					<div
						class="relative flex items-center">
						{# Input de recherche #}
						{{ form_widget(searchForm.query, {
							'attr': {
								'class': 'block w-full pl-3 pr-10 py-2 border border-gray-300 rounded-md leading-5 bg-white placeholder-gray-400 focus:outline-none focus:ring-1 focus:ring-green-500 focus:border-green-500 sm:text-sm transition-all shadow-sm',
								'placeholder': 'Rechercher...'
							}
						}) }}

						<button type="submit" class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-400 hover:text-green-600 transition-colors">
							<twig:ux:icon name="mingcute:search-line" class="h-5 w-5 ml-2"/>
						</button>
					</div>

					{% if app.request.query.get('query') %}
						<div class="absolute right-0 pt-5">
							<a href="{{ path('app_order_index') }}" class="text-xs uppercase text-gray-400 hover:text-red-500 flex items-center transition-colors">
								<twig:ux:icon name="iconoir:cancel" class="w-3 h-3 mr-1"/>
								Effacer la recherche
							</a>
						</div>
					{% endif %}
					{{ form_end(searchForm) }}
				</div>
				{# Table #}
				<div class="overflow-x-auto">
					<table class="min-w-full divide-y divide-gray-200">
						<thead class="bg-gray-50">
							<tr>
								<th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">
									Numéro de commande
								</th>
								<th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">
									Status de commande
								</th>
								<th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">
									Créer le
								</th>
								<th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">
									Mis à jour le
								</th>
								<th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">
									Actions
								</th>
							</tr>
						</thead>
						<tbody class="bg-white divide-y divide-gray-200">
							{% for order in orders %}
								<tr class="hover:bg-gray-50 transition-colors">
									<td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
										{{ order.orderNumber }}
									</td>

									<td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
										{% if order.status == 'Réservation' %}
											<span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">
												{{ order.status }}
											</span>
										{% elseif order.status == 'Annulée' %}
											<span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
												{{ order.status }}
											</span>
										{% else %}
											<span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
												{{ order.status }}
											</span>
										{% endif %}
									</td>
									<td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
										{{ order.createdAt | date('d-m-Y H:i') }}
									</td>

									<td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 italic">
										{{ order.updatedAt | date('d-m-Y H:i') }}
									</td>

									<td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-3">
										{% if order.status == "Réservation" %}
											<a href="{{ path('app_order_edit', {'id': order.id}) }}" class="text-indigo-600 hover:text-indigo-900" title="Modifier">
												<twig:ux:icon name="cuida:edit-outline" class="w-5 h-5 inline"/>
											</a>
										{% endif %}
										<a href="{{ path('app_order_show', {'id': order.id}) }}" class="text-green-600 hover:text-green-900" title="Voir">
											<twig:ux:icon name="mingcute:eye-line" class="w-5 h-5 inline"/>
										</a>
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="7" class="px-6 py-12 text-center text-sm text-gray-500">
										<twig:ux:icon name="iconoir:warning-circle" class="w-6 h-6 inline"/>
										<p class="mt-2">
											Aucune commande répertoriée
										</p>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
				<div class="mt-4 px-4">
					{{ knp_pagination_render(orders) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
