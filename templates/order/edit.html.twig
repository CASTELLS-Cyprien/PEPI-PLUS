{% extends 'base.html.twig' %}

{% block title %}
	Modifier l'élément
{% endblock %}

{% block body %}
	<div
		class="min-h-screen bg-gray-100">
		{# Header #}
		<div class="bg-white shadow-sm border-b border-gray-200">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
				<div class="flex items-center justify-between">
					<div class="flex items-center space-x-3">
						<a href="{{ path('app_order_index') }}" class="text-gray-400 hover:text-gray-600">
							<twig:ux:icon name="iconoir:arrow-left" class="w-6 h-6 inline"/>
						</a>
						<div>
							<h1 class="text-2xl font-bold text-gray-900">
								Modifier la commande
							</h1>
							<p class="mt-1 text-sm text-gray-500 font-mono">
								ID:
								{{ order.id }}
								|
								{{ order.orderNumber }}
							</p>
						</div>
					</div>

					<div class="flex items-center space-x-3">
						<a href="{{ path('app_order_show', {'id': order.id}) }}" class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors">
							<twig:ux:icon name="mingcute:eye-line" class="w-5 h-5 mr-2"/>
							Voir
						</a>
					</div>
				</div>
			</div>
		</div>

		{# Content #}
		<div
			class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
			{# Card Form #}
			<div class="bg-white shadow-sm rounded-xl border border-gray-200 overflow-hidden">
				<div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
					<h3 class="text-sm font-bold text-gray-700 uppercase tracking-wider">
						Détails du statut
					</h3>
				</div>

				<div class="p-8">
					{{ include('order/_form.html.twig', {
                        button_label: 'Mettre à jour la commande',
                    }) }}
				</div>
			</div>

			<div class="mt-8 text-center">
				<p class="text-xs text-gray-400 italic">
					Dernière modification le
					{{ order.updatedAt|date('d/m/Y à H:i') }}
				</p>
			</div>
		</div>
	</div>
{% endblock %}
