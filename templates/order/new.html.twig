{# templates/stock/new.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Nouveau Stock
{% endblock %}

{% block body %}
	<div class="min-h-screen bg-gray-100 py-8">
		<div
			class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">

			{# Navigation / Breadcrumb style EasyAdmin #}
			<div class="mb-6 flex items-center justify-between">
				<div>
					<h1 class="text-2xl font-bold text-gray-900">Créer une entrée de stock</h1>
					<p class="text-sm text-gray-500">Ajoutez une nouvelle ressource à votre inventaire interne.</p>
				</div>
				<a href="{{ path('app_stock_gestion_index') }}" class="text-sm font-medium text-gray-600 hover:text-gray-900 flex items-center">
					<twig:ux:icon name="iconoir:arrow-left" class="w-6 h-6"/>
					Retour à la gestion
				</a>
			</div>

			{# Formulaire #}
			<div class="bg-white shadow-sm rounded-xl border border-gray-200 overflow-hidden">
				{{ form_start(form) }}
				<div class="p-8 space-y-6">

					<div
						class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
						{# Section Numero de commande #}
						<div class="sm:col-span-6">
							{{ form_label(form.orderNumber, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-1'}}) }}
							{{ form_widget(form.orderNumber, {'attr': {'class': 'block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm'}}) }}
							{{ form_errors(form.orderNumber) }}
						</div>

						{# Section Status #}
						<div class="sm:col-span-3">
							{{ form_label(form.status, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-1'}}) }}
							{{ form_widget(form.status, {'attr': {'class': 'block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm'}}) }}
						</div>
					</div>

				</div>

				{# Pied de formulaire avec actions #}
				<div class="bg-gray-50 px-8 py-4 border-t border-gray-200 flex items-center justify-end space-x-3">
					<button type="submit" class="inline-flex justify-center py-2 px-6 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors">
						Créer le stock
					</button>
				</div>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}
