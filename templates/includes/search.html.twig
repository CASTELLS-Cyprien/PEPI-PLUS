<div class="flex justify-end p-4">
	{{ form_start(searchForm, {'attr': {'class': 'relative w-full'}}) }}
	<div
		class="relative flex items-center">
		{# Input de recherche #}
		{{ form_widget(searchForm.query, {
        'attr': {
            'class': 'block w-full pl-3 pr-10 py-2 border border-gray-300 rounded-md leading-5 bg-white placeholder-gray-400 focus:outline-none focus:ring-1 focus:ring-green-500 focus:border-green-500 sm:text-sm transition-all shadow-sm',
            'placeholder': 'Rechercher...'
            }
        }) }}

		<div
			class="absolute inset-y-0 right-0 flex items-center pr-3 space-x-2">

			{# Votre bouton "Effacer" personnalis√© #}
			{% if app.request.query.get('query') %}
				<a href="{{ path(app.request.attributes.get('_route')) }}" class="flex items-center justify-center p-1.5 text-gray-400 hover:text-red-500 transition-colors border-r border-gray-200 pr-3" title="Effacer la recherche">
					<twig:ux:icon name="iconoir:cancel" class="w-5 h-5"/>
				</a>
			{% endif %}

			{# Bouton de validation (Loupe) #}
			<button type="submit" class="flex items-center justify-center p-1 text-gray-400 hover:text-green-600 transition-colors">
				<twig:ux:icon name="mingcute:search-line" class="h-6 w-6"/>
			</button>
		</div>
	</div>
	{{ form_end(searchForm) }}
</div>
