<aside class="fixed inset-y-0 left-0 w-72 bg-white border-r border-slate-200 flex flex-col hidden lg:flex z-50">
	<div class="h-16 flex items-center px-6 border-b border-slate-100">
		<h1 class="text-xl font-bold tracking-tight text-slate-800 flex items-center">
			<span class="bg-forest text-white rounded-md px-1.5 py-0.5 mr-2 text-sm">P</span>
			Pépi<span class="text-forest">+</span>
		</h1>
	</div>

	<nav class="flex-1 overflow-y-auto p-3 space-y-0.5">
		<a href="{{ path('app_dashboard') }}" class="group flex items-center px-3 py-2 text-sm font-medium rounded-md transition-colors {{ app.request.get('_route') == 'app_dashboard' ? 'bg-forest/10 text-forest' : 'text-slate-600 hover:bg-slate-50 hover:text-forest' }}">
			<svg class="w-5 h-5 mr-3 {{ app.request.get('_route') == 'app_dashboard' ? 'text-forest' : 'text-slate-400 group-hover:text-forest' }}" fill="none" viewbox="0 0 24 24" stroke="currentColor">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
			</svg>
			Tableau de bord
		</a>

		<div class="pt-5 pb-1">
			<p class="px-3 text-[11px] uppercase font-bold tracking-wider text-slate-400">Gestion</p>
		</div>

		<a href="{{ path('app_plant_index') }}" class="group flex items-center px-3 py-2 text-sm font-medium rounded-md transition-colors {{ app.request.get('_route') starts with 'app_plant' ? 'bg-forest/10 text-forest' : 'text-slate-600 hover:bg-slate-50 hover:text-forest' }}">
			<svg class="w-5 h-5 mr-3 text-slate-400 group-hover:text-forest" fill="none" viewbox="0 0 24 24" stroke="currentColor">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"/>
			</svg>
			Catalogue des plants
		</a>

		<a href="{{ path('app_stock_index') }}" class="group flex items-center px-3 py-2 text-sm font-medium rounded-md transition-colors {{ app.request.get('_route') starts with 'app_stock' ? 'bg-forest/10 text-forest' : 'text-slate-600 hover:bg-slate-50 hover:text-forest' }}">
			<svg class="w-5 h-5 mr-3 text-slate-400 group-hover:text-forest" fill="none" viewbox="0 0 24 24" stroke="currentColor">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
			</svg>
			Stocks (réel + virtuel)
		</a>

		{% if is_granted('ROLE_ADMIN') %}
			<div class="pt-5 pb-1">
				<p class="px-3 text-[11px] uppercase font-bold tracking-wider text-slate-400">Administration</p>
			</div>
			<a href="{{ path('app_user_index') }}" class="group flex items-center px-3 py-2 text-sm font-medium rounded-md transition-colors {{ app.request.get('_route') starts with 'app_user' ? 'bg-forest/10 text-forest' : 'text-slate-600 hover:bg-slate-50 hover:text-forest' }}">
				<svg class="w-5 h-5 mr-3 text-slate-400 group-hover:text-forest" fill="none" viewbox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
				</svg>
				Utilisateurs
			</a>
		{% endif %}
	</nav>

	<div class="p-4 border-t border-slate-100 bg-slate-50/50">
		<div class="flex items-center justify-between group">
			<div class="flex items-center space-x-3 overflow-hidden">
				<div class="h-8 w-8 flex-shrink-0 rounded-full bg-forest text-white flex items-center justify-center text-xs font-bold">
					{{ app.user.email|first|upper }}
				</div>
				<div class="flex flex-col truncate">
					<span class="text-xs font-semibold text-slate-700 truncate">{{ app.user.email }}</span>
					<span class="text-[10px] text-slate-400 uppercase tracking-tighter">En ligne</span>
				</div>
			</div>
			<a href="{{ path('app_logout') }}" class="p-1.5 rounded-md text-slate-400 hover:text-red-500 hover:bg-red-50 transition-colors" title="Déconnexion">
				<svg class="w-5 h-5" fill="none" viewbox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
				</svg>
			</a>
		</div>
	</div>
</aside>
