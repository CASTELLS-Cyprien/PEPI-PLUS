<aside class="fixed inset-y-0 left-0 w-72 bg-white border-r border-slate-200 flex flex-col hidden lg:flex z-50">
	<div class="h-16 flex items-center px-6 border-b border-slate-100">
		<img src="{{ asset('img/logoPepiPlusSF.png') }}" alt="Logo Pépi+" style="width: 100px !important; height: auto !important;">
	</div>

	<nav class="flex-1 overflow-y-auto p-3 space-y-0.5">
		{% if is_granted('ROLE_ADMIN') or is_granted('ROLE_COLLABORATOR') %}

			{# Tableau de bord #}
			<a href="{{ path('app_dashboard') }}" class="group flex items-center px-3 py-2 text-sm font-medium rounded-md transition-colors {{ app.request.get('_route') == 'app_dashboard' ? 'bg-green-600/10 text-green-600' : 'text-slate-600 hover:bg-slate-50 hover:text-green-600' }}">
				<twig:ux:icon name="iconoir:home" class="w-5 h-5 mr-3 {{ app.request.get('_route') == 'app_dashboard' ? 'text-green-600' : 'text-slate-400 group-hover:text-green-600' }}" fill="none" viewbox="0 0 24 24" stroke="currentColor"/>
				Tableau de bord
			</a>
			{# Stock Global #}
			<a href="{{ path('app_stock_index') }}" class="group flex items-center px-3 py-2 text-sm font-medium rounded-md transition-colors {{ app.request.get('_route') == 'app_stock_index' ? 'bg-green-600/10 text-green-600 font-bold' : 'text-slate-600 hover:bg-slate-50 hover:text-green-600' }}">
				<twig:ux:icon name="iconoir:globe" class="w-5 h-5 mr-3 {{ app.request.get('_route') == 'app_stock_index' ? 'text-green-600' : 'text-slate-400 group-hover:text-green-600' }}" fill="none" viewbox="0 0 24 24" stroke="currentColor"/>
				Stock Global
			</a>
		{% endif %}

		{% if is_granted('ROLE_PARTNER') %}
			<div class="pt-5 pb-1">
				<p class="px-3 text-[11px] uppercase font-bold tracking-wider text-slate-400">GESTION</p>
			</div>
			<a href="{{ path('app_partner_reservations') }}" class="group flex items-center px-3 py-2 text-sm font-medium rounded-md transition-colors {{ app.request.get('_route') == 'app_partner_reservations' ? 'bg-green-600/10 text-green-600' : 'text-slate-600 hover:bg-slate-50 hover:text-green-600' }}">
				<twig:ux:icon name="iconoir:delivery-truck" class="w-5 h-5 mr-3 {{ app.request.get('_route') == 'app_partner_reservations' ? 'text-green-600' : 'text-slate-400 group-hover:text-green-600' }}" fill="none" viewbox="0 0 24 24" stroke="currentColor"/>
				Mes réservations
			</a>

			<a href="{{ path('app_partner_myStock') }}" class="group flex items-center px-3 py-2 text-sm font-medium rounded-md transition-colors {{ app.request.get('_route') == 'app_partner_myStock' ? 'bg-green-600/10 text-green-600' : 'text-slate-600 hover:bg-slate-50 hover:text-green-600' }}">
				<twig:ux:icon name="iconoir:package" class="w-5 h-5 mr-3 {{ app.request.get('_route') == 'app_partner_myStock' ? 'text-green-600' : 'text-slate-400 group-hover:text-green-600' }}" fill="none" viewbox="0 0 24 24" stroke="currentColor"/>
				Mon stock personnel
			</a>
		{% endif %}
		{% if is_granted('ROLE_ADMIN') or is_granted('ROLE_COLLABORATOR') %}
			<div class="pt-5 pb-1">
				<p class="px-3 text-[11px] uppercase font-bold tracking-wider text-slate-400">GESTION</p>
			</div>
			{# Commandes #}
			<a href="{{ path('app_order_index') }}" class="group flex items-center px-3 py-2 text-sm font-medium rounded-md transition-colors {{ app.request.get('_route') starts with 'app_order' ? 'bg-green-600/10 text-green-600' : 'text-slate-600 hover:bg-slate-50 hover:text-green-600' }}">
				<twig:ux:icon name="iconoir:cart" class="w-5 h-5 mr-3 {{ app.request.get('_route') == 'app_order_index' ? 'text-green-600' : 'text-slate-400 group-hover:text-green-600' }}" fill="none" viewbox="0 0 24 24" stroke="currentColor"/>
				Commandes des plants
			</a>

			{# Catalogue Plants #}
			<a href="{{ path('app_plant_index') }}" class="group flex items-center px-3 py-2 text-sm font-medium rounded-md transition-colors {{ app.request.get('_route') starts with 'app_plant' ? 'bg-green-600/10 text-green-600' : 'text-slate-600 hover:bg-slate-50 hover:text-green-600' }}">
				<twig:ux:icon name="iconoir:tree" class="w-5 h-5 mr-3 {{ app.request.get('_route') == 'app_plant_index' ? 'text-green-600' : 'text-slate-400 group-hover:text-green-600' }}" fill="none" viewbox="0 0 24 24" stroke="currentColor"/>
				Catalogue des plants
			</a>

			{# Catalogue Conditionnements #}
			<a href="{{ path('app_packaging_index') }}" class="group flex items-center px-3 py-2 text-sm font-medium rounded-md transition-colors {{ app.request.get('_route') starts with 'app_packaging' ? 'bg-green-600/10 text-green-600' : 'text-slate-600 hover:bg-slate-50 hover:text-green-600' }}">
				<twig:ux:icon name="iconoir:box" class="w-5 h-5 mr-3 {{ app.request.get('_route') == 'app_packaging_index' ? 'text-green-600' : 'text-slate-400 group-hover:text-green-600' }}" fill="none" viewbox="0 0 24 24" stroke="currentColor"/>
				Catalogue des conditionnements
			</a>

			{# Inventaire Interne #}
			<a href="{{ path('app_stock_gestion_index') }}" class="group flex items-center px-3 py-2 text-sm font-medium rounded-md transition-colors {{ app.request.get('_route') == 'app_stock_gestion_index' ? 'bg-green-600/10 text-green-600 font-bold' : 'text-slate-600 hover:bg-slate-50 hover:text-green-600' }}">
				<twig:ux:icon name="iconoir:package" class="w-5 h-5 mr-3 {{ app.request.get('_route') == 'app_stock_gestion_index' ? 'text-green-600' : 'text-slate-400 group-hover:text-green-600' }}" fill="none" viewbox="0 0 24 24" stroke="currentColor"/>
				Inventaire Interne
			</a>

			{# Saisons #}
			<a href="{{ path('app_season_index') }}" class="group flex items-center px-3 py-2 text-sm font-medium rounded-md transition-colors {{ app.request.get('_route') starts with 'app_season' ? 'bg-green-600/10 text-green-600' : 'text-slate-600 hover:bg-slate-50 hover:text-green-600' }}">
				<twig:ux:icon name="iconoir:calendar" class="w-5 h-5 mr-3 {{ app.request.get('_route') starts with 'app_season' ? 'text-green-600' : 'text-slate-400 group-hover:text-green-600' }}" fill="none" viewbox="0 0 24 24" stroke="currentColor"/>
				Gestion des Saisons
			</a>
		{% endif %}

		{% if is_granted('ROLE_ADMIN') %}
			<div class="pt-5 pb-1">
				<p class="px-3 text-[11px] uppercase font-bold tracking-wider text-slate-400">Administration</p>
			</div>

			{# Utilisateurs #}
			<a href="{{ path('app_user_index') }}" class="group flex items-center px-3 py-2 text-sm font-medium rounded-md transition-colors {{ app.request.get('_route') starts with 'app_user' ? 'bg-green-600/10 text-green-600' : 'text-slate-600 hover:bg-slate-50 hover:text-green-600' }}">
				<twig:ux:icon name="iconoir:community" class="w-5 h-5 mr-3 {{ app.request.get('_route') == 'app_user' ? 'text-green-600' : 'text-slate-400 group-hover:text-green-600' }}" fill="none" viewbox="0 0 24 24" stroke="currentColor"/>
				Utilisateurs
			</a>

			{# Partenaires #}
			<a href="{{ path('app_partner_index') }}" class="group flex items-center px-3 py-2 text-sm font-medium rounded-md transition-colors {{ app.request.get('_route') starts with 'app_partner' ? 'bg-green-600/10 text-green-600' : 'text-slate-600 hover:bg-slate-50 hover:text-green-600' }}">
				<twig:ux:icon name="iconoir:user" class="w-5 h-5 mr-3 {{ app.request.get('_route') == 'app_partner' ? 'text-green-600' : 'text-slate-400 group-hover:text-green-600' }}" fill="none" viewbox="0 0 24 24" stroke="currentColor"/>
				Partenaires
			</a>
		{% endif %}
	</nav>

	<div class="p-4 border-t border-slate-100 bg-slate-50/50">
		<div class="flex items-center justify-between group">
			<a href="{{ path('app_user_profile') }}" class="flex items-center space-x-3 overflow-hidden flex-1 hover:bg-slate-100 p-1 rounded-lg transition-colors mr-2">
				<div class="h-8 w-8 rounded-full bg-green-600 flex items-center justify-center text-white font-medium">
					{{ app.user ? app.user.email|slice(0, 1)|upper : 'A' }}
				</div>
				<div class="flex flex-col truncate">
					<span class="text-xs font-semibold text-slate-700 truncate">{{ app.user.email }}</span>
					<span class="text-[10px] text-slate-400 uppercase tracking-tighter group-hover:text-green-600">Voir mon profil</span>
				</div>
			</a>

			<a href="{{ path('app_logout') }}" class="p-1.5 rounded-md text-slate-400 hover:text-red-500 hover:bg-red-50 transition-colors" title="Déconnexion">
				<twig:ux:icon name="si:sign-out-line" class="w-5 h-5"/>
			</a>
		</div>
	</div>
</aside>
