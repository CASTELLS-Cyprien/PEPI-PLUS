{% extends 'base.html.twig' %}

{% block title %}Créer un nouvel conditionnements
{% endblock %}

{% block body %}
	<div
		class="min-h-screen bg-gray-100">
		{# Header #}
		<div class="bg-white shadow-sm border-b border-gray-200">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
				<div class="flex items-center space-x-3">
					<a href="{{ path('app_packaging_index') }}" class="text-gray-400 hover:text-gray-600">
						<twig:ux:icon name="iconoir:arrow-left" class="w-6 h-6"/>
					</a>
					<div>
						<h1 class="text-2xl font-bold text-gray-900">Créer un nouvel élément</h1>
						<p class="mt-1 text-sm text-gray-500">Remplissez les informations ci-dessous</p>
					</div>
				</div>
			</div>
		</div>

		{# Content #}
		<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
			{% for message in app.flashes('success') %}
				<div class="mb-4 bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg flex items-start">
					<twig:ux:icon name="bi:check-lg" class="w-6 h-6"/>
					<span>{{ message }}</span>
				</div>
			{% endfor %}

			{% for message in app.flashes('error') %}
				<div class="mb-4 bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg flex items-start">
					<twig:ux:icon name="iconoir:warning-circle" class="w-6 h-6"/>
					<span>{{ message }}</span>
				</div>
			{% endfor %}

			{{ include('packaging/_form.html.twig', {
            button_label: 'Créer',
        }) }}
		</div>
	</div>
{% endblock %}
