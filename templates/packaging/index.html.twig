{% extends 'base.html.twig' %}

{% block title %}
	Liste des conditionnements
{% endblock %}

{% block body %}
	<div
		class="min-h-screen bg-gray-100">
		{# Header #}
		<div class="bg-white shadow-sm border-b border-gray-200">
			<div class="sm:px-8 lg:px-8 py-6">
				<div class="flex items-center justify-between">
					<div>
						<h1 class="text-2xl font-bold text-gray-900">
							Liste des conditionnements
						</h1>
						<p class="mt-1 text-sm text-gray-500">
							Gérez vos conditionnements ici
						</p>
					</div>
					<a href="{{ path('app_packaging_new') }}" class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-green-600 border border-transparent rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors">
						<twig:ux:icon name="formkit:add" class="w-5 h-5 inline mr-2"/>
						Créer un nouvel élément
					</a>
				</div>
			</div>
		</div>

		{# Content #}
		<div class="sm:px-8 lg:px-8 py-8">
			<div class="bg-white shadow-sm rounded-lg border border-gray-200 overflow-hidden">
				<div class="bg-white shadow-sm rounded-lg border border-gray-200 overflow-hidden">
					<div>
						{% include 'includes/search.html.twig' with {'searchForm': searchForm} %}
					</div>
					{# Table #}
					<div class="overflow-x-auto">
						<table class="min-w-full divide-y divide-gray-200">
							<thead class="bg-gray-50">
								<tr>
									<th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
										Label
									</th>
									<th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
										Actions
									</th>
								</tr>
							</thead>
							<tbody class="bg-white divide-y divide-gray-200">
								{% for item in packagings %}
									<tr class="hover:bg-gray-50 transition-colors">
										<td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
											{{ item.label }}
										</td>
										<td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
											<a href="{{ path('app_packaging_show', {'id': item.id}) }}" class="inline-flex items-center text-green-600 hover:text-green-900">
												<twig:ux:icon name="mingcute:eye-line" class="w-5 h-5 inline"/>
											</a>
											<a href="{{ path('app_packaging_edit', {'id': item.id}) }}" class="inline-flex items-center text-blue-600 hover:text-green-800 transition-colors">
												<twig:ux:icon name="cuida:edit-outline" class="w-5 h-5 inline"/>
											</a>
										</td>
									</tr>
								{% else %}
									<tr>
										<td colspan="5" class="px-6 py-12 text-center text-sm text-gray-500">
											<twig:ux:icon name="iconoir:warning-circle" class="w-6 h-6 inline"/>
											<p class="mt-2">
												Aucun élément trouvé
											</p>
											<p class="mt-1">
												<a href="{{ path('app_packaging_new') }}" class="text-green-600 hover:text-green-500">
													Créez votre premier élément
												</a>
											</p>
										</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
					<div class="mt-4 px-4">
						{{ knp_pagination_render(packagings) }}
					</div>
				</div>
			</div>
		</div>
	{% endblock %}
