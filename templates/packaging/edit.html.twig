{% extends 'base.html.twig' %}

{% block title %}
	Modifier l'élément
{% endblock %}

{% block body %}
	<div
		class="min-h-screen bg-gray-100">
		{# Header #}
		<div class="bg-white shadow-sm border-b border-gray-200">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
				<div class="flex items-center justify-between">
					<div class="flex items-center space-x-3">
						<a href="{{ path('app_packaging_index') }}" class="text-gray-400 hover:text-gray-600">
							<twig:ux:icon name="iconoir:arrow-left" class="w-6 h-6"/>
						</a>
						<div>
							<h1 class="text-2xl font-bold text-gray-900">
								Modifier l'élément
							</h1>
							<p class="mt-1 text-sm text-gray-500">
								ID:
								{{ packaging.id }}
							</p>
						</div>
					</div>

					<div class="flex items-center space-x-3">
						<a href="{{ path('app_packaging_show', {'id': packaging.id}) }}" class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors">
							<twig:ux:icon name="mingcute:eye-line" class="w-5 h-5 inline"/>
							Voir
						</a>

						{{ include('packaging/_delete_form.html.twig') }}
					</div>
				</div>
			</div>
		</div>

		{# Content #}
		<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
			{% for message in app.flashes('success') %}
				<div class="mb-4 bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg flex items-start">
					<twig:ux:icon name="bi:check-lg" class="w-6 h-6"/>
					<span>
						{{ message }}
					</span>
				</div>
			{% endfor %}

			{% for message in app.flashes('error') %}
				<div class="mb-4 bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg flex items-start">
					<twig:ux:icon name="iconoir:warning-circle" class="w-6 h-6"/>
					<span>
						{{ message }}
					</span>
				</div>
			{% endfor %}

			{{ include('packaging/_form.html.twig', {
            button_label: 'Mettre à jour',
        }) }}
		</div>
	</div>
{% endblock %}
