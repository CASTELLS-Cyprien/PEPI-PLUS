{% extends 'base.html.twig' %}
{% block title %}
	Mon Profil - Pépi+
{% endblock %}
{% block body %}
	<div class="min-h-screen bg-gray-100/50 py-10">
		<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="mb-8">
				<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
					<div class="flex items-center justify-between">
						<div>
							<a href="{{ path('app_dashboard') }}" class="hover:text-forest">
								Tableau de bord
							</a>
							<span class="mx-2">
								/
							</span>
							<span class="text-gray-900 font-medium">
								Mon Profil
							</span>
						</div>
						<div class="flex items-center space-x-3">
							<div class="h-8 w-8 rounded-full bg-green-600 flex items-center justify-center text-white font-medium">
								{{ app.user ? app.user.email|slice(0, 1)|upper : 'A' }}
							</div>
						</div>
					</div>
				</div>
			</div>
			<div
				class="space-y-6">
				{# SECTION 1 : IDENTITÉ #}
				<div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
					<div class="px-6 py-4 border-b border-gray-100 bg-gray-50/50 flex items-center justify-between">
						<h3 class="text-xs font-bold uppercase tracking-widest text-gray-400">
							Informations Générales
						</h3>
						<div class="h-10 w-10 rounded-full bg-forest text-white flex items-center justify-center font-bold">
							{{ app.user.firstName|first|upper }}
							{{ app.user.lastName|first|upper }}
						</div>
					</div>
					<div class="p-8 grid grid-cols-1 md:grid-cols-2 gap-y-8 gap-x-12">
						<div>
							<p class="text-xs font-bold text-gray-400 uppercase mb-1">
								Prénom
							</p>
							<p class="text-sm font-semibold text-gray-900 border-b border-gray-50 pb-2">
								{{ app.user.firstName }}
							</p>
						</div>
						<div>
							<p class="text-xs font-bold text-gray-400 uppercase mb-1">
								Nom
							</p>
							<p class="text-sm font-semibold text-gray-900 border-b border-gray-50 pb-2">
								{{ app.user.lastName }}
							</p>
						</div>
					</div>
				</div>
				{# SECTION 2 : COMPTE (EMAIL & SÉCURITÉ) #}
				<div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
					<div class="px-6 py-4 border-b border-gray-100 bg-gray-50/50">
						<h3 class="text-xs font-bold uppercase tracking-widest text-gray-400">
							Sécurité & Accès
						</h3>
					</div>
					<div
						class="divide-y divide-gray-100">
						{# Email - Lecture seule pour l'UX #}
						<div class="p-6 flex items-center justify-between group">
							<div class="flex items-center space-x-4">
								<div class="p-2 bg-gray-100 rounded-lg group-hover:bg-forest/10 transition-colors">
									<twig:ux:icon name="ic:round-email" class="w-5 h-5 inline mr-2"/>
								</div>
								<div>
									<p class="text-sm font-bold text-gray-900">
										Adresse e-mail
									</p>
									<p class="text-xs text-gray-500">
										{{ app.user.email }}
									</p>
								</div>
							</div>
						</div>
						{# Mot de passe - Action directe #}
						<div class="p-6 flex items-center justify-between group hover:bg-gray-50/50 transition-all">
							<div class="flex items-center space-x-4">
								<div class="p-2 bg-gray-100 rounded-lg group-hover:bg-amber-100 transition-colors">
									<twig:ux:icon name="mdi:secure" class="w-5 h-5 inline mr-2"/>
								</div>
								<div>
									<p class="text-sm font-bold text-gray-900">
										Mot de passe
									</p>
									<p class="text-xs text-gray-500">
										Dernière mise à jour recommandée tous les 6 mois.
									</p>
								</div>
							</div>
							<a href="{{ path('app_user_change_password') }}" class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-green-600 border border-transparent rounded-md hover:bg-green-700">
								<twig:ux:icon name="cuida:edit-outline" class="w-4 h-4 inline mr-2"/>
								Modifier
							</a>
						</div>
					</div>
				</div>
				<div class="mt-6">
					<a href="{{ path('app_dashboard') }}" class="text-sm font-medium text-indigo-600 hover:text-indigo-500 flex items-center">
						<twig:ux:icon name="iconoir:arrow-left" class="w-4 h-4 inline mr-2"/>
						Retour au tableau de bord
					</a>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
