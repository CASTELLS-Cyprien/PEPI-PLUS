{{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

<div class="bg-white shadow-sm rounded-xl border border-gray-200 overflow-hidden">
    <div class="p-8 space-y-6">
        {{ form_errors(form) }}

        {# Section Authentification #}
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="form-group">
                {{ form_label(form.email, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-1'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm', 'placeholder': 'exemple@email.com'}}) }}
                {{ form_errors(form.email) }}
            </div>
            <div class="form-group">
                {{ form_label(form.password, 'Mot de passe', {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-1'}}) }}
                {{ form_widget(form.password, {'attr': {'class': 'block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm'}}) }}
                {{ form_errors(form.password) }}
            </div>
        </div>

        <hr class="border-gray-100">

        {# Section Identité #}
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="form-group">
                {{ form_label(form.firstName, 'Prénom', {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-1'}}) }}
                {{ form_widget(form.firstName, {'attr': {'class': 'block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm'}}) }}
                {{ form_errors(form.firstName) }}
            </div>
            <div class="form-group">
                {{ form_label(form.lastName, 'Nom', {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-1'}}) }}
                {{ form_widget(form.lastName, {'attr': {'class': 'block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm'}}) }}
                {{ form_errors(form.lastName) }}
            </div>
        </div>

        {# Section Rôles et Statut #}
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 pt-4">
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-3">Permissions</label>
                <div class="p-4 bg-gray-50 rounded-lg border border-gray-100">
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        {# Rôle par défaut (Visuel seulement) #}
                        <div class="flex items-center opacity-60">
                            <input type="checkbox" checked disabled class="h-4 w-4 text-gray-400 border-gray-300 rounded">
                            <span class="ml-2 text-sm text-gray-600">Utilisateur (Défaut)</span>
                        </div>

                        {# Boucle sur les rôles définis dans UserType #}
                        {% for role in form.roles %}
                            <div class="flex items-center space-x-2">
                                {{ form_widget(role, {'attr': {'class': 'h-4 w-4 text-green-600 border-gray-300 rounded focus:ring-green-500'}}) }}
                                {{ form_label(role, null, {'label_attr': {'class': 'text-sm text-gray-700 cursor-pointer'}}) }}
                            </div>
                        {% endfor %}
                    </div>
                </div>
                {{ form_errors(form.roles) }}
            </div>

            {# Section Compte Actif #}
            <div class="flex flex-col justify-start">
                <label class="block text-sm font-semibold text-gray-700 mb-3">Statut du compte</label>
                <div class="relative flex items-start p-4 bg-green-50 rounded-lg border border-green-100">
                    <div class="flex items-center h-5">
                        {{ form_widget(form.isActive, {'attr': {'class': 'h-5 w-5 text-green-600 border-gray-300 rounded focus:ring-green-500'}}) }}
                    </div>
                    <div class="ml-3 text-sm">
                        <label for="{{ form.isActive.vars.id }}" class="font-bold text-green-900">Compte Actif</label>
                        <p class="text-green-700 text-xs">Permet d'autoriser ou bloquer l'accès.</p>
                    </div>
                </div>
                {{ form_errors(form.isActive) }}
            </div>
        </div>
    </div>

    {# Actions (Footer de la carte) #}
    <div class="bg-gray-50 px-8 py-4 border-t border-gray-200 flex items-center justify-between">
        <a href="{{ path('app_user_index') }}" class="text-sm font-medium text-gray-600 hover:text-gray-900 flex items-center">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
            Retour à la liste
        </a>
        <button type="submit" class="inline-flex justify-center py-2 px-8 border border-transparent shadow-sm text-sm font-bold rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-all">
            {{ button_label|default('Enregistrer l\'utilisateur') }}
        </button>
    </div>
</div>

{{ form_end(form) }}