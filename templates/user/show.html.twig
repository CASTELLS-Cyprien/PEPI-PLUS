{% extends 'base.html.twig' %}

{% block title %}Détails de l'utilisateur -
	{{ user.firstName }}
	{{ user.lastName }}
{% endblock %}

{% block body %}
	<div
		class="min-h-screen bg-gray-100">
		{# Header #}
		<div class="bg-white shadow-sm border-b border-gray-200">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
				<div class="flex items-center justify-between">
					<div class="flex items-center space-x-3">
						<a href="{{ path('app_user_index') }}" class="text-gray-400 hover:text-gray-600">
							<twig:ux:icon	name="iconoir:arrow-left"	class="w-6 h-6" />
						</a>
						<div>
							<h1 class="text-2xl font-bold text-gray-900">Profil Utilisateur</h1>
							<p class="mt-1 text-sm text-gray-500">ID:
								{{ user.id }}
								|
								{{ user.email }}</p>
						</div>
					</div>

					<div class="flex items-center space-x-3">
						<a href="{{ path('app_user_edit', {'id': user.id}) }}" class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-indigo-600 border border-transparent rounded-md hover:bg-indigo-700">
							<svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewbox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
							</svg>
							Modifier
						</a>
					</div>
				</div>
			</div>
		</div>

		{# Content #}
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
			<div class="bg-white shadow overflow-hidden sm:rounded-lg border border-gray-200">
				<div class="px-4 py-5 sm:px-6 bg-gray-50 border-b border-gray-200">
					<h3 class="text-lg leading-6 font-medium text-gray-900">Informations personnelles</h3>
				</div>
				<div class="px-4 py-5 sm:p-0">
					<dl
						class="sm:divide-y sm:divide-gray-200">

						{# Nom Complet #}
						<div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
							<dt class="text-sm font-medium text-gray-500">Identité</dt>
							<dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
								<div class="font-medium text-gray-900">{{ user.firstName }}
									{{ user.lastName }}</div>
							</dd>
						</div>

						{# Email #}
						<div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
							<dt class="text-sm font-medium text-gray-500">Email</dt>
							<dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
								{{ user.email }}
							</dd>
						</div>

						{# Roles #}
						<div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
							<dt class="text-sm font-medium text-gray-500">Rôles</dt>
							<dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
								<code class="bg-gray-100 px-2 py-1 rounded text-xs">
									{{ user.roles ? user.roles|json_encode : 'aucun' }}
								</code>
							</dd>
						</div>

						{# Statut Actif #}
						<div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
							<dt class="text-sm font-medium text-gray-500">Statut du compte</dt>
							<dd class="mt-1 text-sm sm:mt-0 sm:col-span-2">
								{% if user.isActive %}
									<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
										Actif
									</span>
								{% else %}
									<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
										Inactif
									</span>
								{% endif %}
							</dd>
						</div>

					</dl>
				</div>
			</div>

			<div class="mt-6">
				<a href="{{ path('app_user_index') }}" class="text-sm font-medium text-indigo-600 hover:text-indigo-500 flex items-center">
					<twig:ux:icon	name="iconoir:arrow-left"	class="w-4 h-4 mr-2" />
					Retour à la liste des utilisateurs
				</a>
			</div>
		</div>
	</div>
{% endblock %}
