{% extends 'base.html.twig' %}

{% block title %}Créer un nouvel utilisateur
{% endblock %}

{% block body %}
	<div class="min-h-screen bg-gray-100 py-8">
		<div
			class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">

			{# Header / Navigation #}
			<div class="mb-6 flex items-center justify-between">
				<div>
					<h1 class="text-2xl font-bold text-gray-900">Créer un nouvel utilisateur</h1>
					<p class="text-sm text-gray-500">Ajoutez un nouvel utilisateur et définissez ses accès au système.</p>
				</div>
				<a href="{{ path('app_user_index') }}" class="text-sm font-medium text-gray-600 hover:text-gray-900 flex items-center">
					<twig:ux:icon name="iconoir:arrow-left" class="w-5 h-5 inline mr-2"/>
					Retour à la liste
				</a>
			</div>

			{# Content #}
			<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
				{% for message in app.flashes('success') %}
					<div class="mb-4 bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg flex items-start">
						<twig:ux:icon name="mdi:sucess-outline" class="w-5 h-5 inline mr-2"/>
						<span>{{ message }}</span>
					</div>
				{% endfor %}

				{% for message in app.flashes('error') %}
					<div class="mb-4 bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg flex items-start">
						<twig:ux:icon name="iconoir:warning-circle" class="w-5 h-5 inline mr-2"/>
						<span>{{ message }}</span>
					</div>
				{% endfor %}

				{{ include('user/_form.html.twig', {
            button_label: 'Mettre à jour',
        }) }}

			</div>
		</div>
	{% endblock %}
