{% extends 'base.html.twig' %}

{% block title %}Créer un nouvel élément
{% endblock %}

{% block body %}
	<div
		class="min-h-screen bg-gray-100">
		{# Header #}
		<div class="bg-white shadow-sm border-b border-gray-200">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
				<div class="flex items-center space-x-3">
					{% if is_granted('ROLE_ADMIN', 'ROLE_COLLABORATOR') %}
						<a href="{{ path('app_plant_index') }}" class="text-gray-400 hover:text-gray-600">
							<twig:ux:icon name="iconoir:arrow-left" class="w-6 h-6"/>
						</a>
					{% elseif is_granted('ROLE_PARTNER') %}
						<a href="{{ path('app_partner_myStock') }}" class="text-gray-400 hover:text-gray-600">
							<twig:ux:icon name="iconoir:arrow-left" class="w-6 h-6"/>
						</a>
					{% endif %}
					<div>
						<h1 class="text-2xl font-bold text-gray-900">Créer un nouvel élément</h1>
						<p class="mt-1 text-sm text-gray-500">Remplissez les informations ci-dessous</p>
					</div>
				</div>
			</div>
		</div>

		{# Content #}
		<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
			{{ include('plant/_form.html.twig', {
            button_label: 'Créer',
        }) }}
		</div>
	</div>
{% endblock %}
