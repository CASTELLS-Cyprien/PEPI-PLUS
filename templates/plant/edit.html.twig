{% extends 'base.html.twig' %}

{% block title %}Modifier
	{{ plant.commonName }}
	| Pépi+
{% endblock %}

{% block body %}
	<div class="p-6 max-w-3xl mx-auto">
		<div class="mb-8 flex justify-between items-end">
			<div>
				<h1 class="text-3xl font-bold text-forest">Modifier la fiche</h1>
				<p class="text-gray-600">Mise à jour de :
					<span class="font-semibold">{{ plant.latinName }}</span>
				</p>
			</div>
			{{ include('plant/_delete_form.html.twig') }}
		</div>

		<div class="card bg-white p-8">
			{{ include('plant/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

			<div class="mt-6 pt-6 border-t border-gray-100 text-center">
				<a href="{{ path('app_plant_index') }}" class="text-sm text-gray-500 hover:text-forest transition underline">
					Retour au catalogue
				</a>
			</div>
		</div>
	</div>
{% endblock %}
