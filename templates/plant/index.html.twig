{% extends 'base.html.twig' %}

{% block title %}Catalogue des plants | Pépi+
{% endblock %}

{% block body %}
	<div class="p-6 bg-menthe-clair ">
		<div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-8">
			<div>
				<h1 class="text-3xl font-bold text-forest">Catalogue des plants</h1>
				<p class="text-gray-600 mt-1">Gérez la liste complète de vos végétaux et leurs informations.</p>
			</div>

			<a href="{{ path('app_plant_new') }}" class="inline-flex items-center px-5 py-2.5 bg-forest hover:bg-opacity-90 text-white font-semibold rounded-lg shadow-md transition-all duration-200 ease-in-out transform hover:-translate-y-0.5">
				<svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewbox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
				</svg>
				Ajouter un plant
			</a>
		</div>

		<div class="card overflow-hidden border-0 shadow-lg bg-white rounded-xl">
			<div class="overflow-x-auto">
				<table class="w-full text-left border-collapse">
					<thead>
						<tr class="bg-forest text-white uppercase text-xs font-bold tracking-wider">
							<th class="px-6 py-4">ID</th>
							<th class="px-6 py-4">Nom Latin</th>
							<th class="px-6 py-4">Nom Commun</th>
							<th class="px-6 py-4 text-center">Type</th>
							<th class="px-6 py-4 text-right">Actions</th>
						</tr>
					</thead>
					<tbody class="divide-y divide-gray-100">
						{% for plant in plants %}
							<tr class="hover:bg-menthe-clair/30 transition-colors duration-150">
								<td class="px-6 py-4 font-mono text-sm text-gray-500">
									#{{ plant.id }}
								</td>
								<td class="px-6 py-4 font-semibold text-forest italic">
									{{ plant.latinName }}
								</td>
								<td class="px-6 py-4 text-gray-700">
									{{ plant.commonName }}
								</td>
								<td class="px-6 py-4 text-center">
									<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-olive-clair text-white">
										{{ plant.type }}
									</span>
								</td>
								<td class="px-6 py-4 text-right">
									<div class="flex justify-end gap-3">
										<a href="{{ path('app_plant_show', {'id': plant.id}) }}" class="text-olive-clair hover:text-forest transition-colors p-1" title="Voir">
											<svg class="w-5 h-5" fill="none" stroke="currentColor" viewbox="0 0 24 24">
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
											</svg>
										</a>
										<a href="{{ path('app_plant_edit', {'id': plant.id}) }}" class="text-orange-500 hover:text-terre-cuite transition-colors p-1" title="Modifier">
											<svg class="w-5 h-5" fill="none" stroke="currentColor" viewbox="0 0 24 24">
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
											</svg>
										</a>
									</div>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="5" class="px-6 py-12 text-center text-gray-500 italic bg-gray-50">
									<svg class="w-12 h-12 mx-auto text-gray-300 mb-3" fill="none" stroke="currentColor" viewbox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
									</svg>
									Aucun plant trouvé dans le catalogue.
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}
