{% extends 'base.html.twig' %}

{% block title %}Détails de l'élément
{% endblock %}

{% block body %}
	<div
		class="min-h-screen bg-gray-100">
		{# Header #}
		<div class="bg-white shadow-sm border-b border-gray-200">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
				<div class="flex items-center justify-between">
					<div class="flex items-center space-x-3">
						<a href="{{ path('app_plant_index') }}" class="text-gray-400 hover:text-gray-600">
							<svg class="w-6 h-6" fill="none" stroke="currentColor" viewbox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
							</svg>
						</a>
						<div>
							<h1 class="text-2xl font-bold text-gray-900">Détails de l'élément</h1>
							<p class="mt-1 text-sm text-gray-500">ID:
								{{ plant.id }}</p>
						</div>
					</div>

					<div class="flex items-center space-x-3">
						<a href="{{ path('app_plant_edit', {'id': plant.id}) }}" class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-green-600 border border-transparent rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors">
							<svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewbox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
							</svg>
							Modifier
						</a>

						{{ include('plant/_delete_form.html.twig') }}
					</div>
				</div>
			</div>
		</div>

		{# Content #}
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
			{% for message in app.flashes('success') %}
				<div class="mb-4 bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg flex items-start">
					<svg class="w-5 h-5 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewbox="0 0 20 20">
						<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
					</svg>
					<span>{{ message }}</span>
				</div>
			{% endfor %}

			<div class="bg-white shadow-sm rounded-lg border border-gray-200 overflow-hidden">
				<div class="px-6 py-5 border-b border-gray-200 bg-gray-50">
					<h3 class="text-lg font-medium text-gray-900">Informations générales</h3>
				</div>

				<div class="px-6 py-5">
					<dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
						<div class="sm:col-span-1">
							<dt class="text-sm font-medium text-gray-500 mb-1">ID</dt>
							<dd class="text-sm text-gray-900">{{ plant.id }}</dd>
						</div>

						<div class="sm:col-span-1">
							<dt class="text-sm font-medium text-gray-500 mb-1">Nom</dt>
							<dd class="text-sm text-gray-900">{{ plant.latinName }}</dd>
						</div>

						<div class="sm:col-span-2">
							<dt class="text-sm font-medium text-gray-500 mb-1">Description</dt>
							<dd class="text-sm text-gray-900">{{ plant.commonName }}</dd>
						</div>

						{# <div class="sm:col-span-1">
							<dt class="text-sm font-medium text-gray-500 mb-1">Date de création</dt>
							<dd class="text-sm text-gray-900">
								{{ plant.createdAt ? plant.createdAt|date('d/m/Y à H:i') : '' }}
							</dd>
						</div>

						<div class="sm:col-span-1">
							<dt class="text-sm font-medium text-gray-500 mb-1">Dernière modification</dt>
							<dd class="text-sm text-gray-900">
								{{ plant.updatedAt ? plant.updatedAt|date('d/m/Y à H:i') : '' }}
							</dd>
						</div> #}
					</dl>
				</div>
			</div>

			{# Section supplémentaire (optionnelle) #}
			<div class="mt-6 bg-white shadow-sm rounded-lg border border-gray-200 overflow-hidden">
				<div class="px-6 py-5 border-b border-gray-200 bg-gray-50">
					<h3 class="text-lg font-medium text-gray-900">Informations complémentaires</h3>
				</div>

				<div class="px-6 py-5">
					<p class="text-sm text-gray-500">Aucune information complémentaire disponible.</p>
				</div>
			</div>

			{# Actions rapides #}
			<div class="mt-6 flex items-center justify-between">
				<a href="{{ path('app_plant_index') }}" class="inline-flex items-center text-sm text-gray-600 hover:text-gray-900">
					<svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
					</svg>
					Retour à la liste
				</a>

				<div class="text-sm text-gray-500">
					Plant ID: #{{ plant.id }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
