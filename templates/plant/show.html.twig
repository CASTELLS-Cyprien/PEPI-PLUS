{% extends 'base.html.twig' %}

{% block title %}Détails de la plante -
	{{ plant.latinName }}
{% endblock %}

{% block body %}

	{# Header #}
	<div class="bg-white shadow-sm border-b border-gray-200">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
			<div class="flex items-center justify-between">
				<div class="flex items-center space-x-3">
					<a href="{{ path('app_plant_index') }}" class="text-gray-400 hover:text-forest transition-colors">
						<svg class="w-6 h-6" fill="none" stroke="currentColor" viewbox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
						</svg>
					</a>
					<div>
						<h1 class="text-2xl font-bold text-gray-900">Fiche Descriptive</h1>
						<p class="mt-1 text-sm text-gray-500">ID: #{{ plant.id }}
							|
							<span class="italic font-medium text-forest">{{ plant.latinName }}</span>
						</p>
					</div>
				</div>

				<div class="flex items-center gap-3">
					<a href="{{ path('app_plant_edit', {'id': plant.id}) }}" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-forest transition-colors">
						<svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewbox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
						</svg>
						Modifier
					</a>
					{{ include('plant/_delete_form.html.twig') }}
				</div>
			</div>
		</div>
	</div>

	{# Content #}
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
		<div class="bg-white shadow overflow-hidden sm:rounded-lg border border-gray-200">
			<div class="px-4 py-5 sm:px-6 bg-gray-50 border-b border-gray-200">
				<h3 class="text-lg leading-6 font-medium text-gray-900">Informations Botaniques</h3>
			</div>
			<div class="px-4 py-5 sm:p-0">
				<dl
					class="sm:divide-y sm:divide-gray-200">
					{# Nom Latin #}
					<div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
						<dt class="text-sm font-medium text-gray-500">Nom scientifique (Latin)</dt>
						<dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2 italic font-semibold">
							{{ plant.latinName }}
						</dd>
					</div>

					{# Nom Commun #}
					<div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
						<dt class="text-sm font-medium text-gray-500">Nom commun</dt>
						<dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
							{{ plant.commonName }}
						</dd>
					</div>

					{# Vous pouvez ajouter ici d'autres champs si votre entité Plant en possède #}
					{# Exemple : Famille #}
					{% if plant.family is defined %}
						<div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
							<dt class="text-sm font-medium text-gray-500">Famille</dt>
							<dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
								{{ plant.family }}
							</dd>
						</div>
					{% endif %}
				</dl>
			</div>
		</div>

		<div class="mt-6">
			<a href="{{ path('app_plant_index') }}" class="text-sm font-medium text-forest hover:text-green-800 flex items-center transition-colors">
				<svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewbox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
				</svg>
				Retour au catalogue complet
			</a>
		</div>
	</div>
</div>{% endblock %}
