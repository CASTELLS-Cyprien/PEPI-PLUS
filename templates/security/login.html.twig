{% extends 'base.html.twig' %}

{% block title %}Connexion - Pépi+
{% endblock %}

{% block body %}
	<div class="min-h-screen bg-[#D9EDd4] flex items-center justify-center p-6 font-['Open_Sans'] text-[#333D33]">
		<div class="w-full max-w-md">

			<div class="text-center mb-8">
				<img src="{{ asset('img/logoPepiPlusSF.png') }}" alt="Logo Pépi+" style="width: 300px !important; height: auto !important; align:center; margin:auto; margin-bottom:16px;">
				<p class="text-gray-600 text-sm">Gestion de stock - Connexion</p>
			</div>

			<div class="bg-white rounded-[0.75rem] shadow-[0_4px_6px_-1px_rgba(0,0,0,0.1),0_2px_4px_-1px_rgba(0,0,0,0.06)] p-8 border border-[#95B49A]/30">
				<form
					method="post">

					{# Gestion des erreurs #}
					{% if error %}
						<div class="bg-green-600/10 border border-green-600 text-green-600 px-4 py-3 rounded-lg mb-6 text-sm">
							{{ error.messageKey|trans(error.messageData, 'security') }}
						</div>
					{% endif %}

					{# Message si déjà connecté #}
					{% if app.user %}
						<div class="bg-[#2D6A4F]/10 border border-[#2D6A4F] text-[#2D6A4F] px-4 py-3 rounded-lg mb-6 text-sm">
							Vous êtes connecté en tant que
							<strong>{{ app.user.userIdentifier }}</strong>
							<a href="{{ path('app_logout') }}" class="underline hover:opacity-80">Se déconnecter</a>
						</div>
					{% endif %}

					<h2 class="text-2xl font-['Montserrat'] font-semibold text-[#2D6A4F] mb-6">
						Connexion
					</h2>

					<div class="mb-5">
						<label for="inputEmail" class="block text-sm font-medium text-gray-700 mb-2">
							Adresse email
						</label>
						<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="w-full px-4 py-3 border border-[#95B49A]/50 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#2D6A4F] focus:border-transparent transition placeholder:text-gray-400" autocomplete="email" required autofocus placeholder="votre@email.fr">
					</div>

					<div class="mb-5">
						<label for="inputPassword" class="block text-sm font-medium text-gray-700 mb-2">
							Mot de passe
						</label>
						<input type="password" name="password" id="inputPassword" class="w-full px-4 py-3 border border-[#95B49A]/50 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#2D6A4F] focus:border-transparent transition placeholder:text-gray-400" autocomplete="current-password" required placeholder="••••••••">
					</div>

					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

					<div class="flex items-center mb-6">
						<input type="checkbox" name="_remember_me" id="remember_me" class="w-4 h-4 text-[#2D6A4F] border-[#95B49A]/50 rounded focus:ring-[#2D6A4F]">
						<label for="remember_me" class="ml-2 text-sm text-gray-700 cursor-pointer">
							Se souvenir de moi
						</label>
					</div>

					<button type="submit" class="w-full bg-[#2D6A4F] text-white py-3 px-4 rounded-lg font-medium hover:bg-[#2D6A4F]/90 transition shadow-md hover:shadow-lg active:transform active:scale-[0.98]">
						Se connecter
					</button>
				</form>
			</div>

			<div class="text-center mt-6 text-sm text-gray-600">
				<p>Pépi+ © 2026 - Gestion professionnelle de pépinière</p>
			</div>
		</div>
	</div>
{% endblock %}
