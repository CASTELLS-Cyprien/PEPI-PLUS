{% extends 'base.html.twig' %}

{% block title %}Connexion - Pépi+
{% endblock %}

{% block body %}
	<div class="min-h-screen bg-menthe-clair flex items-center justify-center p-6">
		<div
			class="w-full max-w-md">
			<!-- Logo et titre -->
			<div class="text-center mb-8">
				<h1 class="text-5xl font-bold font-montserrat tracking-tight text-forest mb-2">
					Pépi<span class="text-olive-clair">+</span>
				</h1>
				<p class="text-gray-600 text-sm">Gestion de stock - Connexion</p>
			</div>

			<!-- Card de connexion -->
			<div class="bg-white rounded-xl shadow-md p-8 border border-olive-clair/30">
				<form method="post">
					{% if error %}
						<div class="bg-danger/10 border border-danger text-danger px-4 py-3 rounded-lg mb-6 text-sm">
							{{ error.messageKey|trans(error.messageData, 'security') }}
						</div>
					{% endif %}

					{% if app.user %}
						<div class="bg-forest/10 border border-forest text-forest px-4 py-3 rounded-lg mb-6 text-sm">
							Vous êtes connecté en tant que
							<strong>{{ app.user.userIdentifier }}</strong>
							<a href="{{ path('app_logout') }}" class="underline hover:text-forest/80">Se déconnecter</a>
						</div>
					{% endif %}

					<h2 class="text-2xl font-montserrat font-semibold text-forest mb-6">
						Connexion
					</h2>

					<!-- Email -->
					<div class="mb-5">
						<label for="inputEmail" class="block text-sm font-medium text-gray-700 mb-2">
							Adresse email
						</label>
						<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="w-full px-4 py-3 border border-olive-clair/50 rounded-lg focus:outline-none focus:ring-2 focus:ring-forest focus:border-transparent transition" autocomplete="email" required autofocus placeholder="votre@email.fr">
					</div>

					<!-- Password -->
					<div class="mb-5">
						<label for="inputPassword" class="block text-sm font-medium text-gray-700 mb-2">
							Mot de passe
						</label>
						<input type="password" name="password" id="inputPassword" class="w-full px-4 py-3 border border-olive-clair/50 rounded-lg focus:outline-none focus:ring-2 focus:ring-forest focus:border-transparent transition" autocomplete="current-password" required placeholder="••••••••">
					</div>

					<!-- CSRF Token -->
					<input
					type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

					<!-- Remember me -->
					<div class="flex items-center mb-6">
						<input type="checkbox" name="_remember_me" id="remember_me" class="w-4 h-4 text-forest border-olive-clair/50 rounded focus:ring-forest focus:ring-2">
						<label for="remember_me" class="ml-2 text-sm text-gray-700 cursor-pointer">
							Se souvenir de moi
						</label>
					</div>

					<!-- Bouton de connexion -->
					<button type="submit" class="w-full bg-forest text-white py-3 px-4 rounded-lg font-medium hover:bg-forest/90 transition shadow-md hover:shadow-lg">
						Se connecter
					</button>
				</form>
			</div>

			<!-- Footer -->
			<div class="text-center mt-6 text-sm text-gray-600">
				<p>Pépi+ © 2026 - Gestion professionnelle de pépinière</p>
			</div>
		</div>
	</div>
{% endblock %}
