{% extends 'base.html.twig' %}

{% block title %}
	Modifier le partenaire
{% endblock %}

{% block body %}
	<div
		class="min-h-screen bg-gray-100">
		{# Header #}
		<div class="bg-white shadow-sm border-b border-gray-200">
			<div class="sm:px-8 lg:px-8 py-6">
				<div class="flex items-center justify-between">
					<div class="flex items-center space-x-3">
						<a href="{{ path('app_partner_index') }}" class="text-gray-400 hover:text-gray-600">
							<twig:ux:icon name="iconoir:arrow-left" class="w-6 h-6"/>
						</a>
						<div>
							<h1 class="text-2xl font-bold text-gray-900">
								Modifier le partenaire
							</h1>
							<p class="mt-1 text-sm text-gray-500">
								ID:
								{{ partner.id }}
								|
								{{ partner.companyName }}
							</p>
						</div>
					</div>

					<div class="flex items-center space-x-3">
						<a href="{{ path('app_partner_show', {'id': partner.id}) }}" class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors">
							<twig:ux:icon name="mingcute:eye-line" class="w-5 h-5 inline mr-2"/>
							Voir la fiche
						</a>
					</div>
				</div>
			</div>
		</div>

		{# Content #}
		<div
			class="sm:px-8 lg:px-8 py-8">
			{# Inclusion du formulaire global #}
			<div class="bg-white shadow-sm rounded-lg border border-gray-200 p-6">
				{{ include('partner/_form.html.twig', {
					button_label: 'Enregistrer les modifications'
				}) }}
			</div>
		</div>
	</div>
{% endblock %}
