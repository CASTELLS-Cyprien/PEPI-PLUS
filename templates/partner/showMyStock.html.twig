{% extends 'base.html.twig' %}

{% block title %}Détails de mon stock
{% endblock %}

{% block body %}
	<div
		class="min-h-screen bg-gray-100">
		{# Header #}
		<div class="bg-white shadow-sm border-b border-gray-200">
			<div class="sm:px-8 lg:px-8 py-6">
				<div class="flex items-center justify-between">
					<div class="flex items-center space-x-3">
						<a href="{{ path('app_partner_myStock') }}" class="text-gray-400 hover:text-gray-600">
							<twig:ux:icon name="iconoir:arrow-left" class="w-6 h-6 inline mr-2"/>
						</a>
						<div>
							<h1 class="text-2xl font-bold text-gray-900">Détails de l'élément de Stock</h1>
							<p class="mt-1 text-sm text-gray-500">ID:
								{{ stock.id }}
								|
								{{ stock.plant.latinName }}</p>
						</div>
					</div>

					<div class="flex items-center space-x-3">
						{% if is_granted('ROLE_COLLABORATOR') and stock.partner is null %}
							<a href="{{ path('app_partner_editMyStock', {'id': stock.id}) }}" class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-green-600 border border-transparent rounded-md hover:bg-green-700">
								<twig:ux:icon name="iconoir:arrow-left" class="w-4 h-4"/>
								Modifier
							</a>
						{% endif %}
					</div>
				</div>
			</div>
		</div>

		{# Content #}
		<div class="sm:px-8 lg:px-8 py-8">
			<div class="bg-white shadow overflow-hidden sm:rounded-lg border border-gray-200">
				<div class="px-4 py-5 sm:px-6 bg-gray-50 border-b border-gray-200">
					<h3 class="text-lg leading-6 font-medium text-gray-900">Informations sur la ressource</h3>
				</div>
				<div class="px-4 py-5 sm:p-0">
					<dl
						class="sm:divide-y sm:divide-gray-200">
						{# Plante #}
						<div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
							<dt class="text-sm font-medium text-gray-500">Plante</dt>
							<dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
								<div class="font-medium text-gray-900">{{ stock.plant.latinName }}</div>
								<div class="text-gray-500">{{ stock.plant.commonName }}</div>
							</dd>
						</div>

						{# Origine #}
						<div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
							<dt class="text-sm font-medium text-gray-500">Origine / Partenaire</dt>
							<dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
								{% if stock.partner is null %}
									<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
										Production interne
									</span>
								{% else %}
									<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
										{{ stock.partner.companyName }}
									</span>
								{% endif %}
							</dd>
						</div>

						{# Saison #}
						<div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
							<dt class="text-sm font-medium text-gray-500">Saison</dt>
							<dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
								{{ stock.season.year }}
							</dd>
						</div>

						{# Conditionnement #}
						<div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
							<dt class="text-sm font-medium text-gray-500">Conditionnement</dt>
							<dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
								{{ stock.packaging.label|default('N/A') }}
							</dd>
						</div>

						{# Quantité #}
						<div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
							<dt class="text-sm font-medium text-gray-500">Quantité en stock</dt>
							<dd class="mt-1 text-sm sm:mt-0 sm:col-span-2">
								<span class="text-lg font-bold {% if stock.quantity < 10 %}text-red-600{% else %}text-gray-900{% endif %}">
									{{ stock.quantity }}
								</span>
							</dd>
						</div>
					</dl>


					<div class="bg-gray-50 px-6 py-4 border-t border-gray-200 flex items-center justify-between rounded-b-lg">
						<a href="{{ path('app_partner_myStock') }}" class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors">
							<twig:ux:icon name="iconoir:arrow-left" class="w-4 h-4 inline mr-2"/>
							Retour à la liste
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
