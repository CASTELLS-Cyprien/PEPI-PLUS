{% extends 'base.html.twig' %}

{% block title %}Détails du Partenaire -
	{{ partner.companyName }}
{% endblock %}

{% block body %}
	<div
		class="min-h-screen bg-gray-100">
		{# Header #}
		<div class="bg-white shadow-sm border-b border-gray-200">
			<div class="sm:px-8 lg:px-8 py-6">
				<div class="flex items-center justify-between">
					<div class="flex items-center space-x-3">
						<a href="{{ path('app_partner_index') }}" class="text-gray-400 hover:text-gray-600">
							<twig:ux:icon name="iconoir:arrow-left" class="w-6 h-6 inline mr-2"/>
						</a>
						<div>
							<h1 class="text-2xl font-bold text-gray-900">Fiche Partenaire</h1>
							<p class="mt-1 text-sm text-gray-500">ID:
								{{ partner.id }}
								|
								{{ partner.companyName }}</p>
						</div>
					</div>

					<div class="flex items-center space-x-3">
						{% if is_granted('ROLE_COLLABORATOR') %}
							<a href="{{ path('app_partner_edit', {'id': partner.id}) }}" class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-green-600 border border-transparent rounded-md hover:bg-green-700 transition-colors">
								<twig:ux:icon name="cuida:edit-outline" class="w-5 h-5 inline mr-2"/>
								Modifier les informations
							</a>
						{% endif %}
					</div>
				</div>
			</div>
		</div>

		{# Content #}
		<div class="sm:px-8 lg:px-8 py-8">
			<div class="bg-white shadow overflow-hidden sm:rounded-lg border border-gray-200">
				<div class="px-4 py-5 sm:px-6 bg-gray-50 border-b border-gray-200">
					<h3 class="text-lg leading-6 font-medium text-gray-900">Informations Générales</h3>
				</div>
				<div class="px-4 py-5 sm:p-0">
					<dl
						class="sm:divide-y sm:divide-gray-200">
						{# Entreprise #}
						<div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
							<dt class="text-sm font-medium text-gray-500">Nom de l'entreprise</dt>
							<dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2 font-bold">
								{{ partner.companyName }}
							</dd>
						</div>

						{# Contact Details #}
						<div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
							<dt class="text-sm font-medium text-gray-500">Détails de contact</dt>
							<dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2 whitespace-pre-line">
								{{ partner.contactDetails }}
							</dd>
						</div>

						{# Utilisateur Lié #}
						<div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
							<dt class="text-sm font-medium text-gray-500">Compte Utilisateur</dt>
							<dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
								{% for user in partner.users %}
									<div class="flex items-center space-x-2">
										<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
											<span class="text-sm text-gray-900">
												{{ user.email }}
											</span>
										</span>
										<span class="text-gray-500">
											({{ user.firstName }}
											{{ user.lastName }})
										</span>
									</div>
								{% else %}
									<span class="text-red-500 italic text-xs">Aucun compte lié</span>
								{% endfor %}
							</dd>
						</div>

						{# Date Création #}
						<div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
							<dt class="text-sm font-medium text-gray-500">Date d'enregistrement</dt>
							<dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
								{{ partner.getCreatedAt()|date('d/m/Y H:i') }}
							</dd>
						</div>

						{# Statistiques Stocks #}
						<div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
							<dt class="text-sm font-medium text-gray-500">État des stocks</dt>
							<dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
								<span class="font-bold text-green-600">{{ partner.stocks|length }}</span>
							</dd>
						</div>
					</dl>


					<div class="bg-gray-50 px-6 py-4 border-t border-gray-200 flex items-center justify-between rounded-b-lg">
						<a href="{{ path('app_partner_index') }}" class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors">
							<twig:ux:icon name="iconoir:arrow-left" class="w-4 h-4 inline mr-2"/>
							Retour à la liste
						</a>

						<a href="{{ path('app_stock_index', { 'stock_filter': { 'query': partner.companyName, 'minQuantity': '', 'maxQuantity': '' } }) }}" class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors">
							<twig:ux:icon name="mingcute:eye-line" class="w-4 h-4 inline mr-2"/>
							Consulter l'inventaire de ce partenaire
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
