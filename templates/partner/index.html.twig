{# templates/partner/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}
	Gestion des Partenaires
{% endblock %}

{% block body %}
	<div
		class="min-h-screen bg-gray-100">
		{# Header #}
		<div class="bg-white shadow-sm border-b border-gray-200">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
				<div class="flex items-center justify-between">
					<div>
						<h1 class="text-2xl font-bold text-gray-900">
							Liste des Partenaires
						</h1>
						<p class="mt-1 text-sm text-gray-500">
							Gérez les entreprises partenaires et les utilisateurs associés.
						</p>
					</div>
					<a href="{{ path('app_partner_new') }}" class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-green-600 border border-transparent rounded-md hover:bg-green-700 transition-colors shadow-sm">
						<twig:ux:icon name="formkit:add" class="w-5 h-5 inline mr-2"/>
						Créer un nouveau partenaire
					</a>
				</div>
			</div>
		</div>

		{# Content #}
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
			<div class="bg-white shadow-sm rounded-lg border border-gray-200 overflow-hidden">
				<div>
					{% include 'includes/search.html.twig' with {'searchForm': searchForm} %}
				</div>
				<table class="min-w-full divide-y divide-gray-200">
					<thead class="bg-gray-50">
						<tr>
							<th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Société</th>
							<th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Utilisateurs</th>
							<th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Stock</th>
							<th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Créé le</th>
							<th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
						</tr>
					</thead>
					<tbody class="bg-white divide-y divide-gray-200">
						{% for partner in partners %}
							<tr class="hover:bg-gray-50 transition-colors">
								<td class="px-6 py-4 whitespace-nowrap">
									<div class="text-sm font-semibold text-gray-900">{{ partner.companyName }}</div>
									<div class="text-xs text-gray-500">{{ partner.contactDetails|slice(0, 50) }}...</div>
								</td>
								<td class="px-6 py-4 whitespace-nowrap">
									{% if partner.users|length > 0 %}
										<div class="flex flex-col">
											<span class="text-sm text-gray-900">{{ partner.users|first.email }}</span>
											{% if partner.users|length > 1 %}
												<span class="text-xs text-indigo-600 font-medium">+
													{{ partner.users|length - 1 }}
													autre(s)</span>
											{% endif %}
										</div>
									{% else %}
										<span class="text-xs text-gray-400 italic">Aucun utilisateur rattaché</span>
									{% endif %}
								</td>
								<td class="px-6 py-4 whitespace-nowrap text-center">
									<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
										{{ partner.stocks|length }}
										articles
									</span>
								</td>
								<td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
									{{ partner.createdAt ? partner.createdAt|date('d/m/Y') : 'N/A' }}
								</td>
								<td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-3">
									<a href="{{ path('app_partner_show', {'id': partner.id}) }}" class="text-green-600 hover:text-green-900" title="Voir détails">
										<twig:ux:icon name="mingcute:eye-line" class="w-5 h-5 inline"/>
									</a>
									<a href="{{ path('app_partner_edit', {'id': partner.id}) }}" class="text-indigo-600 hover:text-indigo-900" title="Modifier">
										<twig:ux:icon name="cuida:edit-outline" class="w-5 h-5 inline"/>
									</a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="5" class="px-6 py-12 text-center text-sm text-gray-500">
									<twig:ux:icon name="iconoir:warning-circle" class="w-8 h-8 mx-auto mb-2 text-gray-300 inline"/>
									<p>Aucun partenaire trouvé dans le système.</p>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
				<div class="mt-4 px-4">
					{{ knp_pagination_render(partners) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
