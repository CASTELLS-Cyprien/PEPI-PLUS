{% extends 'base.html.twig' %}
{% block title %}
	Inventaire de mes stocks
{% endblock %}
{% block body %}
	<div
		class="min-h-screen bg-gray-100">
		{# Header #}
		<div class="bg-white shadow-sm border-b border-gray-200">
			<div class="sm:px-8 lg:px-8 py-6">
				<div class="flex items-center justify-between">
					<div>
						<h1 class="text-2xl font-bold text-gray-900">
							Inventaire des Stocks
						</h1>
						<p class="mt-1 text-sm text-gray-500">
							Gérez vos quantités et emplacements
						</p>
					</div>
					<a href="{{ path('app_partner_newMyStock') }}" class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-green-600 border border-transparent rounded-md hover:bg-green-700">
						<twig:ux:icon name="formkit:add" class="w-5 h-5 inline mr-2"/>
						Ajouter un stock
					</a>
				</div>
			</div>
		</div>
		{# Content #}
		<div class="sm:px-8 lg:px-8 py-8">
			<div class="bg-white shadow-sm rounded-lg border border-gray-200 overflow-hidden">
				<div>
					{% include 'includes/search.html.twig' with {'searchForm': searchForm} %}
				</div>
				{# Table #}
				<div class="overflow-x-auto">
					<table class="min-w-full divide-y divide-gray-200">
						<thead class="bg-gray-50">
							<tr>
								<th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">
									Plante
								</th>
								<th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">
									Conditionnement
								</th>
								<th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">
									Saison
								</th>
								<th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">
									Quantité
								</th>
								<th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">
									Dernière mise à jour le
								</th>
								<th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">
									Actions
								</th>
							</tr>
						</thead>
						<tbody class="bg-white divide-y divide-gray-200">
							{% for stock in stocks %}
								<tr class="hover:bg-gray-50 transition-colors">
									<td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 font-semibold">
										<div class="text-sm font-medium text-gray-900">
											{{ stock.plant.latinName }}
										</div>
										<div class="text-sm text-gray-500 italic">
											{{ stock.plant.commonName }}
										</div>
									</td>
									<td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
										{{ stock.packaging ? stock.packaging.label }}
									</td>
									<td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
										<span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
											{{ stock.season ? stock.season.year }}
										</span>
									</td>
									<td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
										<span class="font-bold">
											{{ stock.quantity }}
										</span>
									</td>
									<td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 italic">
										{{ stock.updatedAt ? stock.updatedAt|date('d/m/Y H:i') : 'Jamais' }}
									</td>
									<td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-3">
										<a href="{{ path('app_partner_showMyStock', {'id': stock.id}) }}" class="text-green-600 hover:text-green-900" title="Voir">
											<twig:ux:icon name="mingcute:eye-line" class="w-6 h-6 inline"/>
										</a>
										<a href="{{ path('app_partner_editMyStock', {'id': stock.id}) }}" class="text-indigo-600 hover:text-indigo-900" title="Modifier">
											<twig:ux:icon name="cuida:edit-outline" class="w-5 h-5 inline"/>
										</a>
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="7" class="px-6 py-12 text-center text-sm text-gray-500">
										<twig:ux:icon name="iconoir:warning-circle" class="w-6 h-6 inline"/>
										<p class="mt-2">
											Aucun stock répertorié
										</p>
										<p class="mt-1">
											<a href="{{ path('app_partner_newMyStock') }}" class="text-green-600 hover:text-green-500 underline">
												Ajouter un premier mouvement de stock
											</a>
										</p>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
				<div class="mt-4 px-4">
					{{ knp_pagination_render(stocks) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
