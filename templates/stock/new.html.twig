{% extends 'base.html.twig' %}

{% block title %}
	Modifier l'élément
{% endblock %}

{% block body %}
	<div	class="min-h-screen bg-gray-100">
		{# Header #}
		<div	class="bg-white shadow-sm border-b border-gray-200">
			<div	class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
				<div	class="flex items-center space-x-3">
					<a	href="{{ path('app_stock_myStock') }}"	class="text-gray-400 hover:text-gray-600">
						<twig:ux:icon	name="iconoir:arrow-left"	class="w-6 h-6 inline mr-2" />
					</a>
					<div>
						<h1	class="text-2xl font-bold text-gray-900">
							Créer un nouvel élément
						</h1>
						<p	class="mt-1 text-sm text-gray-500">
							Remplissez les informations ci-dessous
						</p>
					</div>
				</div>
			</div>
		</div>

		{# Content #}
		<div	class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
			{% for message in app.flashes('success') %}
				<div	class="mb-4 bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg flex items-start">
					<svg	class="w-5 h-5 mr-3 mt-0.5 flex-shrink-0"	fill="currentColor"	viewbox="0 0 20 20">
						<path	fill-rule="evenodd"	d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"	clip-rule="evenodd" />
					</svg>
					<span>
						{{ message }}
					</span>
				</div>
			{% endfor %}

			{% for message in app.flashes('error') %}
				<div	class="mb-4 bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg flex items-start">
					<twig:ux:icon	name="iconoir:arrow-left"	class="w-4 h-4 inline mr-2" />
					<span>
						{{ message }}
					</span>
				</div>
			{% endfor %}

			{{ include('stock/_form.html.twig', {
            button_label: 'Mettre à jour',
        }) }}
		</div>
	</div>
{% endblock %}
