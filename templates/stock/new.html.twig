{# templates/stock/new.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Nouveau Stock{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-100 py-8">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
        
        {# Navigation / Breadcrumb style EasyAdmin #}
        <div class="mb-6 flex items-center justify-between">
            <div>
                <h1 class="text-2xl font-bold text-gray-900">Créer une entrée de stock</h1>
                <p class="text-sm text-gray-500">Ajoutez une nouvelle ressource à votre inventaire interne.</p>
            </div>
            <a href="{{ path('app_stock_gestion_index') }}" class="text-sm font-medium text-gray-600 hover:text-gray-900 flex items-center">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                </svg>
                Retour à la gestion
            </a>
        </div>

        {# Formulaire #}
        <div class="bg-white shadow-sm rounded-xl border border-gray-200 overflow-hidden">
            {{ form_start(form) }}
                <div class="p-8 space-y-6">
                    
                    <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
                        {# Section Plante #}
                        <div class="sm:col-span-6">
                            {{ form_label(form.plant, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-1'}}) }}
                            {{ form_widget(form.plant, {'attr': {'class': 'block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm'}}) }}
                            {{ form_errors(form.plant) }}
                        </div>

                        {# Section Saison #}
                        <div class="sm:col-span-3">
                            {{ form_label(form.season, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-1'}}) }}
                            {{ form_widget(form.season, {'attr': {'class': 'block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm'}}) }}
                        </div>

                        {# Section Conditionnement #}
                        <div class="sm:col-span-3">
                            {{ form_label(form.packaging, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-1'}}) }}
                            {{ form_widget(form.packaging, {'attr': {'class': 'block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm'}}) }}
                        </div>

                        {# Section Quantité #}
                        <div class="sm:col-span-2">
                            {{ form_label(form.quantity, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-1'}}) }}
                            {{ form_widget(form.quantity, {'attr': {'class': 'block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm', 'placeholder': '0'}}) }}
                        </div>
                    </div>

                </div>

                {# Pied de formulaire avec actions #}
                <div class="bg-gray-50 px-8 py-4 border-t border-gray-200 flex items-center justify-end space-x-3">
                    <button type="submit" class="inline-flex justify-center py-2 px-6 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors">
                        Créer le stock
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}