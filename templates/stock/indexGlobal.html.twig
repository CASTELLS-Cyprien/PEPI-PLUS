{% extends 'base.html.twig' %}

{% block title %}
	Inventaire du stock global
{% endblock %}

{% block body %}
	<div
		class="min-h-screen bg-gray-100">
		{# Header #}
		<div class="bg-white shadow-sm border-b border-gray-200">
			<div class="sm:px-8 lg:px-8 py-6">
				<div class="flex items-center justify-between">
					<div>
						<h1 class="text-2xl font-bold text-gray-900">
							État du Stock Global
						</h1>
						<p class="mt-1 text-sm text-gray-500">
							Vue consolidée : Production interne et Partenaires
						</p>
					</div>
				</div>
			</div>
		</div>

		{# Content #}
		<div class="sm:px-8 lg:px-8 py-8">
			<div class="bg-white shadow overflow-hidden sm:rounded-lg border border-gray-200">
				<div>
					{% include 'includes/search.html.twig' with {'filterForm': filterForm} %}
				</div>
				<div class="overflow-x-auto">
					<table class="min-w-full divide-y divide-gray-200">
						<thead class="bg-gray-50">
							<tr>
								<th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
									Plant (Nom Latin / Commun)
								</th>
								<th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
									Origine
								</th>
								<th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
									Saison
								</th>
								<th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
									Conditionnement
								</th>
								<th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
									Quantité
								</th>
								<th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
									Actions
								</th>
							</tr>
						</thead>
						<tbody class="bg-white divide-y divide-gray-200">
							{% for stock in stocks %}
								<tr class="hover:bg-gray-50 transition-colors">
									<td class="px-6 py-4 whitespace-nowrap">
										<div class="text-sm font-medium text-gray-900">
											{{ stock.plant.latinName }}
										</div>
										<div class="text-sm text-gray-500 italic">
											{{ stock.plant.commonName }}
										</div>
									</td>
									<td class="px-6 py-4 whitespace-nowrap">
										{% if stock.partner is null %}
											<span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
												Stock Réel (Pépi+)
											</span>
										{% else %}
											<span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-purple-100 text-purple-800">
												{{ stock.partner.companyName }}
											</span>
										{% endif %}
									</td>
									<td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
										{{ stock.season.year }}
									</td>
									<td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
										{{ stock.packaging.label|default('N/A') }}
									</td>
									<td class="px-6 py-4 whitespace-nowrap text-center">
										<span class="text-sm font-bold {% if stock.quantity < 10 %}text-red-600{% else %}text-gray-900{% endif %}">
											{{ stock.quantity }}
										</span>
									</td>
									<td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
										<div class="flex justify-end space-x-3">
											{% if (is_granted('ROLE_COLLABORATOR') or is_granted('ROLE_ADMIN')) and stock.partner is null %}
												<a href="{{ path('app_stock_edit', {'id': stock.id}) }}" class="text-blue-600 hover:text-blue-900">
													<twig:ux:icon name="cuida:edit-outline" class="w-5 h-5"/>
												</a>
											{% endif %}
											{% if (is_granted('ROLE_COLLABORATOR') or is_granted('ROLE_ADMIN')) and stock.partner is not null %}
												<form action="{{ path('app_order_reserve', {'id': stock.id}) }}" method="POST" class="flex items-center space-x-2 justify-end">
													<input type="number" name="quantity" min="1" max="{{ stock.quantity }}" class="w-16 border border-gray-300 rounded-md text-sm" placeholder="Qté" required/>
													<button type="submit" class="text-blue-600 hover:text-blue-900">
														<twig:ux:icon name="formkit:add" class="w-5 h-5"/>
													</button>
												</form>
											{% endif %}
											<a href="{{ path('app_stock_show', {'id': stock.id}) }}" class="text-green-600 hover:text-green-900">
												<twig:ux:icon name="mingcute:eye-line" class="w-5 h-5"/>
											</a>
										</div>
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="6" class="px-6 py-10 text-center text-gray-500">
										<p class="mt-2">
											Aucun stock répertorié (Réel ou Virtuel)
										</p>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
				<div class="mt-4 px-4">
					{{ knp_pagination_render(stocks) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
